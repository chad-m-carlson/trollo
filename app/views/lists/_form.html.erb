<div style="display: flex; justify-content: space-between">
  <h1><%= @list.id ? "Edit #{@list.title}" : "Create A New List" %>
  </h1>
  <%= !@work_order ? (link_to  "Back", work_order_path(@list.work_order_id), class: "ui button") : (link_to "Back", work_order_path(@work_order), class: "ui button") %>
</div>
<%= form_with(model: [@list], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :title, "List Name" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description, "Description" %>
    <%= f.text_field :description %>

    <%= !@work_order? (f.hidden_field :work_order_id, value: @list.work_order_id) : (f.hidden_field :work_order_id, value: @work_order.id) %>
  </div>
  <div class="field">
    <%= f.submit nil,  class: "ui button" %>
  </div>
<%end%>