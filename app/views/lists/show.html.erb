<h1><%= @list.title %></h1>
<h3>Description: <%= @list.description %></h3>

<h4>Tasks</h4>
<% @list.tasks.each do |t|%>
<dd>
<div class="ui list">
  <div class="item">
    <div class="content">
      <h4 class="header"><%= t.task_title %></h4>
      <div class="description">Description &nbsp|&nbsp <%= t.task_description %></div>
      <div class="description">Priority &nbsp|&nbsp <%= t.priority %></div>
    </div>
  </div>
</dd>
<br />
<% end%>
<%= link_to  "Delete this list", list_path(@list), method: :delete, data: {confirm: "Are you sure you want to delete #{@list.title}"}, class: "ui button red" %>

